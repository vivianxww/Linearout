<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.myapplication.Main2Activity"
    android:background="@color/abc_input_method_navigation_guard"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/abc_input_method_navigation_guard"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/abc_background_cache_hint_selector_material_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open..."
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/abc_hint_foreground_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ctrl-O"
                android:id="@+id/textView2"
                android:layout_column="1"
                android:textSize="25dp"
                android:textColor="@color/abc_hint_foreground_material_dark"
                android:background="@color/abc_hint_foreground_material_dark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Save..."
                android:id="@+id/textView3"
                android:layout_column="0"
                android:textSize="25dp"
                android:layout_weight="1"
                android:textColor="@color/abc_hint_foreground_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ctrl-S"
                android:id="@+id/textView4"
                android:layout_column="1"
                android:textSize="25dp"
                android:textColor="@color/abc_hint_foreground_material_dark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Save As..."
                android:id="@+id/textView5"
                android:layout_column="0"
                android:textColor="@color/abc_hint_foreground_material_dark"
                android:textSize="25dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ctrl-Shift-S"
                android:id="@+id/textView6"
                android:layout_column="1"
                android:textColor="@color/abc_hint_foreground_material_dark"
                android:textSize="25dp" />
        </TableRow>

        <View
            android:layout_height="4px"
            android:layout_width="fill_parent"
            android:background="#FF909090"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="X Import..."
                android:id="@+id/textView7"
                android:layout_column="0"
                android:textColor="@color/abc_hint_foreground_material_dark"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="X Export"
                android:id="@+id/textView8"
                android:layout_column="0"
                android:textColor="@color/abc_hint_foreground_material_dark"
                android:textSize="25dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ctrl-E"
                android:id="@+id/textView9"
                android:layout_column="1"
                android:textColor="@color/abc_hint_foreground_material_dark"
                android:textSize="25dp" />
        </TableRow>

        <View
            android:layout_height="4px"
            android:layout_width="fill_parent"
            android:background="#FF909090"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Quit"
                android:id="@+id/textView10"
                android:layout_column="0"
                android:textColor="@color/abc_hint_foreground_material_dark"
                android:textIsSelectable="true"
                android:textSize="25dp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
